<div class="container-fluid form">
  <h1><%= @child.name %>'s Status</h1>
  <p>Goal: <%= @child.goal %></p>
  <h3>Screentime: <%= @child.screentime %> minutes</h3>
  <div class="btn-group">
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal2">Use Screentime</button>
    <!-- Modal -->
    <div class="modal fade" id="myModal2" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <%= form_with url: redeem_screentime_child_path, method: :post do |form| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">How much screentime was used?</h4>
          </div>
          <div class="modal-body">
              <%= form.number_field :time_redeemed %><p>minutes</p>
          </div>
          <div class="modal-footer">
            <div class="actions">
              <%= form.submit "Enter" %>
            </div>
          </div>
          <% end %>
        </div>

      </div>
    </div>
    <%= link_to 'Edit', edit_child_path(@child), class: 'btn btn-default' %>
    <%= link_to 'Delete', @child, method: :delete,
        class: 'btn btn-default', data: {confirm: 'Are you sure?'} %>
  </div>
</div>
