<h1>Your Children</h1>

<h2>Money Pool: $<%= MoneyPool.current_balance %></h2>

<table>
  <% @children.order(:name).each do |child| %>
  <tr>
    <td class="list_description">
      <dl>
        <dt><%= child.name %>                     </dt>
        <dd>Current Color: <%= child.color %>     </dd>
        <dd>Screentime: <%= child.screentime %>   </dd>
      </dl>

      <td class="list_actions">
        <%= link_to 'View', child %><br/>
        <%= link_to 'Edit', edit_child_path(child) %><br/>
        <%= link_to 'Delete', child, method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
</table>
<br/>

<%= link_to 'Add Child', new_child_path %><br/>
<%= button_to 'Daily Reset', daily_reset_and_distribution_children_path, data: {confirm: "Are you sure you want to reset?"} %>
