<!DOCTYPE html>
<html>
  <head>
    <title>Clipchart!</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h4>Money Pool: $<%= MoneyPool.current_balance %></h4>

    <% @children.order(:name).each do |child| %>
      <div class="colored-row">
        <div class="col-sm-12", id="main">
          <h2>
            <%= link_to "#{child.name}", child_path(child) %>
            <%= button_to color_up_child_path(child),
                class: 'btn btn-default btn-lg',method: :put do %>
                <span class="glyphicon glyphicon-chevron-up"></span>
            <% end %>
            <%= button_to color_down_child_path(child),
                class: 'btn btn-default btn-lg',method: :put do %>
                <span class="glyphicon glyphicon-chevron-down"></span>
            <% end %>
          </h2>
        </div>
      </div>
    <% end %>
    <br/>

    <%= link_to 'Add Child', new_child_path %><br/>
    <%= button_to 'Daily Reset', daily_reset_and_distribution_children_path, data: {confirm: "Are you sure you want to reset?"} %>
  </body>
