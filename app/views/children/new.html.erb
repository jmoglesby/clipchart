<div class="container-fluid form">

  <h1>Add Child</h1>

  <%= form_for :child, url: children_path do |f| %>

    <% if @child.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@child.errors.count, "error") %> prevented this from saving
        </h2>
        <ul>
          <% @child.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= f.label :name, 'Name' %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :goal, 'Goal' %><br>
      <%= f.text_area :goal %>
    </p>
    <p>
      <%= f.submit %>
    </p>

    <p>
      <%= link_to 'Cancel', root_path %>
    </p>
  <% end %>
</div>
