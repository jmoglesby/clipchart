<h1>Spend From Money Pool</h1>
</br>
<h3>
  Current Balance: <%= number_to_currency(MoneyPool.current_balance) %>
</h3>

<%= form_for @money_pool, method: :adjust_current_balance_cents do %>
<p>
  <%= f.label :value, 'Amount Used' %><br>
  <%= f.number_field :value %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
